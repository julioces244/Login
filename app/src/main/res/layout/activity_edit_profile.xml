<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pe.edu.tecsup.login.EditProfileActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/nameProfile"
            android:layout_marginTop="34dp"
            android:text="Edit Profile"
            android:textColor="@color/primary_light"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/nameProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_action_user"
            android:ems="12"
            android:hint="Name" />

        <EditText
            android:id="@+id/lastnameProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignStart="@+id/nameProfile"
            android:layout_below="@+id/nameProfile"
            android:layout_marginTop="17dp"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_action_password"
            android:ems="12"
            android:hint="Lastname" />

        <EditText
            android:id="@+id/emailProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/lastnameProfile"
            android:layout_below="@+id/lastnameProfile"
            android:layout_marginTop="19dp"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_action_email"
            android:ems="12"
            android:hint="Email" />

        <EditText
            android:id="@+id/telephoneProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/emailProfile"
            android:layout_below="@+id/emailProfile"
            android:layout_marginTop="19dp"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_action_email"
            android:ems="12"
            android:hint="Telephone-number" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cardViewSave"
            android:layout_below="@+id/telephoneProfile"
            android:layout_marginTop="17dp"
            android:textSize="15sp"
            android:text="Gender:" />


        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:orientation="vertical"
            android:layout_alignStart="@+id/textView8">

            <RadioGroup

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:id="@+id/radioGroup">

                <RadioButton
                    android:id="@+id/radioButton7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/cardView"
                    android:layout_alignTop="@+id/radioGroup"
                    android:layout_marginEnd="11dp"
                    android:layout_weight="1"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/radioButton6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Female" />
            </RadioGroup>

        </LinearLayout>

        <EditText
            android:id="@+id/descriptionProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/emailProfile"
            android:layout_below="@+id/linear1"
            android:layout_marginTop="19dp"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_action_email"
            android:ems="12"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:hint="Description"/>


        <android.support.v7.widget.CardView
            android:id="@+id/cardViewSave"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_below="@+id/descriptionProfile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="25dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Save"
                    android:textColor="#fff"
                    android:textSize="18sp" />


            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardViewSave"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:textColor="@color/primary_light"
            android:text="Edit your profile!" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="View Profile"
            android:textColor="@color/colorAccent" />


    </RelativeLayout>

</ScrollView>
